<%- include ('partials/header.ejs') %>

<%- include ('partials/main_nav.ejs') %>


<!--Main Content-->

<div class="container">
    <div class="row">
      <div class="col-md-offset-3 col-md-6">
        <h1><%= title %></h1>
          <form class="form" method="post">
            <div class="form-group">
              <label for="NameTextField">Title</label>
              <input type="text" class="form-control" id="NameTextField"
              placeholder="Title of Event" name="title" value="<%= items.title %>" required>
            </div>
            <div class="form-group">
              <label for="PriceTextField">Type</label>
              <input type="text" class="form-control" id="PriceTextField"
              placeholder="Type of Event" name="type" value="<%= items.type %>"  required>
            </div>
            <div class="form-group">
              <label for="AuthorTextField">Location</label>
              <input type="text" class="form-control" id="AuthorTextField"
              placeholder="Location of Event" name="location" value="<%= items.location %>"  required>
            </div>
            <div class="form-group">
              <label for="GenreTextField">Date</label>
              <input type="text" class="form-control" id="GenreTextField"
              placeholder="Date of Event" name="date" value="<%= items.date %>"  required>
            </div>

            <button type="submit" class="btn btn-primary"><i class="fa fa-check-square-o"></i> Submit</button>
            <a href="/tourney/tournaments" class="btn btn-warning"><i class="fa fa-undo"></i> Cancel</a>
          </form>
      </div>
    </div>
  </div>


<%- include ('partials/bottom_nav.ejs') %>

<%- include ('partials/footer.ejs') %>
